<project name="Janino" default="dist" basedir=".">
	<property file="build.properties"/>

	<target name="publish-all" depends="get-xircles-user">
		<echo message="rsync to janino.codehaus.org"/>
		<exec executable="${rsync-executable}">
			<arg value="--recursive"/>
			<arg value="--chmod=ugo=rwX"/>
			<arg value="--rsh=${ssh-executable}"/>
			<arg value="--verbose"/>
			<arg value="--exclude=.svn"/>
			<arg value="favicon.ico"/>
			<arg value="build/janino-${version}.zip"/>
			<arg value="build/lib/commons-compiler.jar"/>
			<arg value="build/lib/janino.jar"/>
			<arg value="build/lib/commons-compiler-jdk.jar"/>
			<arg value="new_bsd_license.txt"/>
			<arg value="changelog.html"/>
			<arg value="build/pad_file.xml"/>
			<arg value="build/javadoc"/>
			<arg value="../janino/src/org/codehaus/janino/samples"/>
			<arg value="${xircles-user}@janino.codehaus.org:/projects/janino/dist/"/>
		</exec>
	</target>

	<target name="publish-zip" description="Upload only the ZIP file for beta testers" depends="get-xircles-user">
		<echo message="rsync to janino.codehaus.org"/>
		<exec executable="${rsync-executable}">
			<arg value="--recursive"/>
			<arg value="--chmod=ugo=rwX"/>
			<arg value="--rsh=${ssh-executable}"/>
			<arg value="--verbose"/>
			<arg value="--exclude=.svn"/>
			<arg value="build/janino-${version}.zip"/>
			<arg value="${xircles-user}@janino.codehaus.org:/projects/janino/dist/"/>
		</exec>
	</target>

	<target name="get-xircles-user">
		<input
			addproperty="xircles-user"
			defaultvalue="aunkrig"
			message="Your XIRCLES user name (you must have write access to the JANINO space):"
		/>
	</target>

	<target name="dist" depends="janino-zip,pad-file"/>

	<target name="janino-zip" depends="clean,commons-compiler.jar,janino.jar,commons-compiler-jdk.jar,src-zips">
		<zip destfile="build/janino-${version}.zip" filesonly="true">
			<zipfileset file="build/lib/commons-compiler.jar"     prefix="janino-${version}"/>
			<zipfileset file="build/lib/janino.jar"               prefix="janino-${version}"/>
			<zipfileset file="build/lib/commons-compiler-jdk.jar" prefix="janino-${version}"/>

			<zipfileset file="build/commons-compiler-src.zip"     prefix="janino-${version}"/>
			<zipfileset file="build/janino-src.zip"               prefix="janino-${version}"/>
			<zipfileset file="build/commons-compiler-jdk-src.zip" prefix="janino-${version}"/>

			<zipfileset file="README.txt"                         prefix="janino-${version}"/>
			<zipfileset file="new_bsd_license.txt"                prefix="janino-${version}"/>
		</zip>
	</target>

	<target name="pad-file">
		<length file="build/janino-${version}.zip" property="janino-zip-size"/>
		<copy file="pad_file-template.xml" tofile="build/pad_file.xml" encoding="ISO-8859-1">
			<filterchain>
				<replacestring from="@VERSION@" to="${version}"/>
				<replacestring from="@SIZE@"    to="${janino-zip-size}"/>
			</filterchain>
		</copy>
	</target>

	<target name="src-zips">
		<zip destfile="build/commons-compiler-src.zip" filesonly="true">
			<zipfileset dir="../commons-compiler/src"/>
		</zip>
		<zip destfile="build/janino-src.zip" filesonly="true">
			<zipfileset dir="../janino/src"/>
		</zip>
		<zip destfile="build/commons-compiler-jdk-src.zip" filesonly="true">
			<zipfileset dir="../commons-compiler-jdk/src"/>
		</zip>
	</target>

	<target name="compile-commons-compiler">
		<mkdir dir="build/bin-commons-compiler"/>

		<javac
			fork="yes"
			source="1.2"
			target="1.1"
			srcdir="../commons-compiler/src"
			destdir="build/bin-commons-compiler"
			debug="true"
			debuglevel="lines,vars,source"
		/>
		<copy todir="build/bin-commons-compiler">
			<fileset dir="../commons-compiler/src" excludes="**/*.java,**/package.html"/>
		</copy>
	</target>

	<target name="compile-janino">
		<mkdir dir="build/bin-janino"/>

		<javac
			fork="yes"
			source="1.2"
			target="1.1"
			srcdir="../janino/src"
			excludes="org/codehaus/janino/AstGeneratorVisitor.java"
			destdir="build/bin-janino"
			classpath="${ant.jar}:build/bin-commons-compiler"
			debug="true"
			debuglevel="lines,vars,source"
		/>
		<copy todir="build/bin-janino">
			<fileset dir="../janino/src" excludes="**/*.java,**/package.html"/>
		</copy>
	</target>

	<target name="compile-commons-compiler-jdk">
		<mkdir dir="build/bin-commons-compiler-jdk"/>

		<javac
			fork="yes"
			source="1.6"
			target="1.6"
			srcdir="../commons-compiler-jdk/src"
			destdir="build/bin-commons-compiler-jdk"
			classpath="build/bin-commons-compiler"
			debug="true"
			debuglevel="lines,vars,source"
		/>
		<copy todir="build/bin-commons-compiler-jdk">
			<fileset dir="../commons-compiler-jdk/src" excludes="**/*.java,**/package.html"/>
		</copy>
	</target>

	<target name="commons-compiler.jar" depends="compile-commons-compiler">
		<mkdir dir="build/lib"/>
		<jar jarfile="build/lib/commons-compiler.jar" filesonly="true">
			<fileset dir="build/bin-commons-compiler"/>
		</jar>
		<signjar
			keystore="dummy-keystore"
			storepass="storepass"
			keypass="keypass"
			jar="build/lib/commons-compiler.jar"
			alias="dummy"
		/>
	</target>

	<target name="janino.jar" depends="compile-janino">
		<mkdir dir="build/lib"/>
		<jar jarfile="build/lib/janino.jar" filesonly="true">
			<fileset dir="build/bin-janino"/>
		</jar>
		<signjar
			keystore="dummy-keystore"
			storepass="storepass"
			keypass="keypass"
			jar="build/lib/janino.jar"
			alias="dummy"
		/>
	</target>

    <target name="janino-src.jar" depends="compile-janino">
        <mkdir dir="build/lib"/>
        <jar jarfile="build/lib/janino-src.jar" filesonly="true">
            <fileset dir="../commons-compiler-jdk/src"/>
            <fileset dir="../janino/src"/>
        </jar>
    </target>


	<target name="commons-compiler-jdk.jar" depends="compile-commons-compiler-jdk">
		<mkdir dir="build/lib"/>
		<jar jarfile="build/lib/commons-compiler-jdk.jar" filesonly="true">
			<fileset dir="build/bin-commons-compiler-jdk"/>
		</jar>
		<signjar
			keystore="dummy-keystore"
			storepass="storepass"
			keypass="keypass"
			jar="build/lib/commons-compiler-jdk.jar"
			alias="dummy"
		/>
	</target>

	<target name="javadoc" description="Build JAVADOC">
		<mkdir dir="build/javadoc"/>
		<javadoc
			header="&lt;a href=&quot;http://janino.net/&quot; target=&quot;_top&quot;&gt;janino.net&lt;/a&gt;"
			splitindex="true"
			doctitle="Janino ${version}"
			windowtitle="Janino ${version}"
			overview="overview.html"
			sourcepath="../commons-compiler/src;../janino/src;../commons-compiler-jdk/src"
			classpath="${ant.jar}"
			destdir="build/javadoc"
			packagenames="${javadoc-packages}"
		>
			<link offline="true" href="${javadoc-jdk-href}" packagelistloc="${javadoc-jdk-packagelistloc}"/>
			<link offline="true" href="${javadoc-ant-href}" packagelistloc="${javadoc-ant-packagelistloc}"/>
		</javadoc>
	</target>

	<target name="clean">
		<delete dir="build"/>
	</target>
</project>
